.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.back-btn {
  background: #2c3e50;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
}

.detail-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

/* 基本信息 */
.basic-info {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.value {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.event-name {
  color: #2c3e50;
  font-weight: 600;
}

.importance {
  color: #e74c3c;
  font-weight: bold;
}

/* 数据对比 */
.data-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #2c3e50;
}

.data-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.data-box {
  flex: 1;
  background: #f8f9fa;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

.box-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.box-value {
  font-size: 36rpx;
  font-weight: bold;
}

.forecast {
  color: #f39c12;
}

.previous {
  color: #95a5a6;
}

.actual {
  color: #27ae60;
}

/* AI分析 */
.ai-section {
  margin-bottom: 40rpx;
}

.ai-content {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 12rpx;
  max-height: 400rpx;
}

.ai-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
  white-space: pre-wrap;
}

/* 提示 */
.tips-section {
  background: #e8f4f8;
  padding: 30rpx;
  border-radius: 12rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}