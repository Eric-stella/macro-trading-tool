/* pages/index/index.wxss */

/* 状态栏 */
.status-bar {
  background: linear-gradient(135deg, #1a237e, #283593);
  color: white;
  padding: 10px 15px;
  font-size: 12px;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-mode {
  background: rgba(255, 255, 255, 0.2);
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 11px;
}

/* 头部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 0 5px;
}

.header-title {
  flex: 1;
}

.title {
  display: block;
  font-size: 20px;
  font-weight: 600;
  color: #1a237e;
  margin-bottom: 5px;
}

.subtitle {
  font-size: 12px;
  color: #666;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 10px;
}

.btn-icon {
  background: none;
  border: none;
  font-size: 20px;
  padding: 5px;
  min-width: auto;
  line-height: 1;
}

.btn-icon::after {
  border: none;
}

.btn-refresh {
  background: linear-gradient(135deg, #1a237e, #283593);
  color: white;
  border: none;
  border-radius: 15px;
  padding: 6px 15px;
  font-size: 12px;
  transition: all 0.3s ease;
}

.btn-refresh.refreshing {
  opacity: 0.7;
  animation: pulse 1.5s infinite;
}

/* 筛选器面板 */
.filter-panel {
  margin-bottom: 15px;
  animation: fadeIn 0.3s ease;
}

.filter-section {
  margin-bottom: 15px;
}

.filter-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.filter-option {
  padding: 6px 12px;
  background: #f5f5f5;
  border-radius: 15px;
  font-size: 12px;
  color: #666;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: linear-gradient(135deg, #1a237e, #283593);
  color: white;
  font-weight: 500;
}

.sort-options {
  display: flex;
  gap: 10px;
}

.sort-option {
  padding: 8px 15px;
  background: #f5f5f5;
  border-radius: 8px;
  font-size: 13px;
  color: #666;
  transition: all 0.3s ease;
}

.sort-option.active {
  background: #e8eaf6;
  color: #1a237e;
  font-weight: 500;
}

.filter-actions {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  background: white;
  border-radius: 10px;
  padding: 12px 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 11px;
  color: #999;
  margin-bottom: 3px;
}

.stat-value {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #1a237e;
}

/* 事件列表 */
.events-list {
  margin-bottom: 20px;
}

.event-item {
  margin-bottom: 15px;
  border-left: 4px solid #e0e0e0;
  transition: all 0.3s ease;
}

.event-item.importance-high {
  border-left-color: #f5222d;
}

.event-item.importance-medium {
  border-left-color: #fa8c16;
}

.event-item.importance-low {
  border-left-color: #52c41a;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 10px;
  cursor: pointer;
}

.event-time-info {
  display: flex;
  align-items: center;
  gap: 8px;
}

.event-time {
  font-size: 16px;
  font-weight: 600;
  color: #1a237e;
  min-width: 45px;
}

.event-flag {
  font-size: 18px;
}

.event-country {
  font-size: 13px;
  color: #666;
  background: #f5f5f5;
  padding: 2px 8px;
  border-radius: 10px;
}

.event-importance {
  display: flex;
  align-items: center;
  gap: 5px;
}

.importance-icon {
  font-size: 16px;
}

.importance-text {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
  font-weight: 500;
}

.importance-text.importance-high {
  background: #fff1f0;
  color: #f5222d;
}

.importance-text.importance-medium {
  background: #fff7e6;
  color: #fa8c16;
}

.importance-text.importance-low {
  background: #f6ffed;
  color: #52c41a;
}

/* 事件内容 */
.event-content {
  margin-bottom: 10px;
}

.event-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
  line-height: 1.4;
}

.event-data-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  background: #fafafa;
  border-radius: 6px;
}

.data-label {
  font-size: 12px;
  color: #666;
}

.data-value {
  font-size: 14px;
  font-weight: 500;
  color: #333;
}

.data-value.actual-better {
  color: #52c41a;
  font-weight: 600;
}

.data-value.actual-worse {
  color: #f5222d;
  font-weight: 600;
}

.data-value.actual-equal {
  color: #1890ff;
  font-weight: 600;
}

/* AI分析区域 */
.ai-analysis-section {
  margin-top: 15px;
  padding-top: 15px;
  border-top: 1px dashed #e0e0e0;
}

.ai-header {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  padding: 5px 0;
}

.ai-icon {
  font-size: 18px;
}

.ai-title {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
  color: #1a237e;
}

.ai-toggle {
  font-size: 12px;
  color: #1890ff;
  padding: 2px 8px;
  background: #e6f7ff;
  border-radius: 10px;
}

.ai-content {
  overflow: hidden;
  transition: all 0.3s ease;
}

.ai-content.collapsed {
  max-height: 0;
  opacity: 0;
}

.ai-content.expanded {
  max-height: 500px;
  opacity: 1;
  margin-top: 10px;
}

.ai-text {
  display: block;
  font-size: 13px;
  line-height: 1.6;
  color: #444;
  background: #f8f9fa;
  padding: 12px;
  border-radius: 8px;
  border-left: 3px solid #1890ff;
}

/* 事件底部 */
.event-footer {
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px solid #f0f0f0;
}

.event-actions {
  display: flex;
  justify-content: flex-end;
  gap: 8px;
}

.btn-action {
  background: none;
  border: 1px solid #d9d9d9;
  color: #666;
  font-size: 11px;
  padding: 2px 10px;
  border-radius: 12px;
}

.btn-action::after {
  border: none;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40px 20px;
}

.empty-icon {
  font-size: 60px;
  color: #d9d9d9;
  margin-bottom: 15px;
  display: block;
}

.empty-text {
  display: block;
  font-size: 14px;
  color: #999;
  margin-bottom: 20px;
}

/* 底部信息 */
.footer-info {
  text-align: center;
  padding: 15px;
  background: white;
  border-radius: 10px;
  margin-top: 20px;
}

.footer-text {
  display: block;
  font-size: 11px;
  color: #999;
  margin-bottom: 5px;
}

/* 加载和错误状态 */
.loading-container,
.error-container {
  padding: 60px 20px;
  text-align: center;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
}

.loading-icon {
  font-size: 40px;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 14px;
  color: #666;
}

.error-icon {
  font-size: 40px;
  color: #f5222d;
  margin-bottom: 15px;
  display: block;
}

.error-text {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 20px;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* 响应式调整 */
@media (min-width: 768px) {
  .event-data-grid {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .event-item {
    padding: 20px;
  }
  
  .title {
    font-size: 22px;
  }
}